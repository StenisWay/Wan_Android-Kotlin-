<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wan_Android" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/waterblue</item>
        <item name="colorPrimaryVariant">@color/sky_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


    </style>

    <style name="MyFloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
    </style>

    <style name="MyFabOverlay">
        <item name="colorSecondary">@color/sky_blue</item>
        <!-- color used by the icon -->
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>